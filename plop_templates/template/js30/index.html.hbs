<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>{{name}}</title>
  <link rel="stylesheet" href="./style.css">
  <link rel="apple-touch-icon" sizes="180x180" href="./assets/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="./assets/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="./assets/favicon-16x16.png">
  <link rel="manifest" href="./assets/site.webmanifest">
  <script>
    window.addEventListener('resize', function () {
      const windowWidth = window.innerWidth
      const windowHeight = window.innerHeight

      const aspectRatio = windowWidth / windowHeight
      console.log(aspectRatio)

      if (aspectRatio > 1.75) {
        document.body.style.backgroundImage = 'url("./assets/images/landscape_1x2.jpg")'
      } else if (aspectRatio > 0.80) {
        document.body.style.backgroundImage = 'url("./assets/images/portrait_1x1.jpg")'
      } else {
        document.body.style.backgroundImage = 'url("./assets/images/portrait_2x1.jpg")'
      }
    });

    window.addEventListener('DOMContentLoaded', function () {
      window.dispatchEvent(new Event('resize'))
    })
  </script>
  <script src="./index.js" defer></script>

</head>
